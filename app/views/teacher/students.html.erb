<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>Students</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td>
                <%= link_to(student.name, teacher_student_path(student)) %>
              </td>
              <td><%= student.email %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
