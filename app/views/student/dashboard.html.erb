<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>New Assignments</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Due</th>
            <th>Complete</th>
          </tr>
        </thead>
        <tbody>
          <% @to_do.each do |assignment| %>
            <tr>
              <td><%= assignment.title %></td>
              <td><%= assignment.assignment_type %></td>
              <td><%= assignment.due %></td>
              <td><a href="<%= student_activity_work_path(assignment) %>" class="btn btn-primary btn-xs">Do it!</a></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <h1>Past Assignments</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Due</th>
            <th>Submitted</th>
          </tr>
        </thead>
        <tbody>
          <% @done_assignments.each do |assignment| %>
            <tr>
              <td><%= assignment.title %></td>
              <td><%= link_to(assignment.assignment_type, teacher_assignment_path(assignment)) %></td>
              <td><%= assignment.due %></td>
              <td><%= assignment.activities.find_by(student: @student).created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
